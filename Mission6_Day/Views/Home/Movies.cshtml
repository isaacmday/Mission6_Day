@model App
@{
    ViewData["Title"] = "Enter Movie";
}

<style>
    .form-group {
        text-align: left;
        margin-left: auto;
        margin-right: auto;
        max-width: 400px; /* Adjust the max-width as needed */
    }
</style>

<div class="text-center">
    <h1 class="display-4">Movie Entry</h1>
    <br /><br />
    <form method="post" class="form-group">
        <label asp-for="ID">ID:</label>
        <input asp-for="ID" />
        <br /><br />
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" />
        <br /><br />
        <label asp-for="Subcategory">Sub-category:</label>
        <input asp-for="Subcategory" />
        <br /><br />
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
        <br /><br />
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" />
        <br /><br />
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
        <br /><br />
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br /><br />
        <label asp-for="Edited">Edited?</label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br /><br />
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" />
        <br /><br />
        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" maxlength="25" />
        <br /><br />
        <button type="submit">Submit Movie</button>
    </form>
</div>